      <div class="menu-classic">
        <figure class="overlay">
          <%= image_tag('cappucino.jpg') %>
            <div class="col-sm-9">
              <h4 class='menu-title'><%= item.name %></h4>
            </div>
            <div class="col-sm-3">
              <h4 class='menu-price'><%= item.price.to_s + 'â‚¬' %></h4>
            </div>
        </figure>
          <div>
