
<div class='container margin-top-page'>
  <div class='row'>
    <h3 class="menu-subtitle text-center"><%= "Coffee's from" + ' ' + @shop.name %></h3>
    <p><%= link_to 'Back to list', shops_path %></p>
    <% @shop.items.each do |item| %>
    <div class="col-sm-3">
      <div class="menu-classic">
        <figure class="overlay">
          <%= cl_image_tag item.photo %>
            <div class="col-sm-9">
              <h4 class='menu-title'><%= item.name %></h4>
            </div>
            <div class="col-sm-3">
              <h4 class='menu-price'><%= item.price.to_s + 'â‚¬' %></h4>
            </div>
        </figure>
          <div>
            <h4 class="add-button"><%= link_to 'Add', add_to_cart_shop_path(@shop, item_id: item.id), remote: true %></h4>
          </div>
      </div>
    </div>
    <% end %>
    <h4><%= link_to 'Check my cart', cart_shop_path(@shop.id) %></h4>
  </div>


  </br>
  </br>

  <div class="row">
    <div class="col-sm-4">
    <h3 class="menu-subtitle"><%= @shop.name %></h3>
    <h4 class='menu-subtitle'><%= @shop.address %></h4>
    <p class='menu-subtitle'><i class="fa fa-phone" aria-hidden="true"></i><%= " :" + @shop.phone %></p>
    <p class='menu-detail'><%= @shop.horaries %></p>
    <p class='menu-detail'><%= @shop.description %></p>
    </div>
    <div class="col-sm-8">
      <div id="map" style="width: 110%; height: 300px;">
      <%= render 'shop-show-map' %>
      </div>
    </div>
  </div>

</div>

