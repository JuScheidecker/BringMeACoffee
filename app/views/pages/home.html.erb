<!-- Preloader  Romain 30.05.17  Unplugged this section until it works correctly -->

  <div id="preloader">
    <div id="status">
      <div class="status-mes"></div>
    </div>
  </div>

  <!-- Home start -->

  <section id="home" class="intro-module module-image heightfull bg-dark-alfa-30">

    <div class="intro">
      <div class="intro-slider">
        <!-- Slide 1 -->
        <div class="owl-item">
          <h1 class="intro-title">Finest coffee brought to you</h1>
        </div>

      </div><!-- .intro-slider -->

      <div class="container"> <!-- home searchbar -->
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <div id="custom-search-input">
              <form action="/shops" class="input-group col-md-12">
                <input type="text" name='address' class="form-control input-lg shop-search-input" placeholder="  Search for a shop around you ..." />
                <span class="input-group-btn">
                <button  class="btn btn-info btn-lg" type="submit">
                  <i class="glyphicon glyphicon-search"></i>
                </button>
                </span>
              </form>
            </div>
          </div><!-- end col -->
      </div><!-- end row -->
    </div><!-- end searchbar -->

    </div><!-- .intro -->

    <div class="mouse-icon">
      <div class="wheel"></div>
    </div>

  </section>

  <!-- Home end -->

  <!-- About start -->

  <section id="services" class="module">
    <div class="container">

      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <div class="module-header wow fadeInUp animated" style="visibility: visible; animation-name: fadeInUp;">
            <h3 class="module-subtitle">How it works</h3>
          </div>
        </div>
      </div><!-- .row -->

      <div class="flex-align-3">

          <div class="iconbox flex-align-3-item">
            <div class="iconbox-body flex-align-3-height" >
              <div class="iconbox-icon"><span class=" icon-basket"></span></div>
              <div class="iconbox-text">
                <h3 class="iconbox-title">Order</h3>
                <div class="iconbox-desc">
                  You're too short in time or the weather is too bad today ? Order your favorite coffee. Someone will bring it to you !
                </div>
              </div>
            </div>
          </div>

          <div class="iconbox flex-align-3-item">
            <div class="iconbox-body flex-align-3-height" >
              <div class="iconbox-icon"><span class="icon-directions"></span></div>
              <div class="iconbox-text">
                <h3 class="iconbox-title">Deliver or be delivered</h3>
                <div class="iconbox-desc">
                  You choosed to get delivered ? Just wait for a little while ! You choosed to deliver ? You just made savings!
                </div>
              </div>
            </div>
          </div>

          <div class="iconbox flex-align-3-item">
            <div class="iconbox-body flex-align-3-height" >
              <div class="iconbox-icon"><span class="icon-cup"></span></div>
              <div class="iconbox-text">
                <h3 class="iconbox-title">Enjoy</h3>
                <div class="iconbox-desc">
                  Enjoy your favorite coffee under all circumstances. If you want to earn credits, why not become a deliver !?
                </div>
              </div>
            </div>
          </div>

      </div><!-- .row -->

      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <div class="devider">
            <%= cl_image_tag ("divider-down_lxs9rq") %>
          </div>
        </div>
      </div><!-- .row -->

    </div><!-- .container -->
  </section>

  <!-- About end -->

  <!-- Callout section start -->

  <section id="callout-two" class="callout bg-dark-alfa-30">
    <div class="container" style="height: 30vh">
    </div><!-- .container -->
  </section>

  <!-- Callout section end -->

  <!-- Gallery start -->

  <section class="module" id ="gallery">
    <div class="container">

      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <div class="module-header wow fadeInUp animated" style="visibility: visible; animation-name: fadeInUp;">
            <h3 class="module-subtitle">Finest coffee</h3>
          </div>
        </div>
      </div><!-- .row -->

      <div class="row">

        <div class="col-sm-4">
          <div class="gallery-item">
            <% shops_ids = Shop.all.map(&:id) %>
            <% id = shops_ids.sample %>
            <% shop1 = Shop.find(id) %>
            <%= link_to shop_path(id) do %>
              <figure class="overlay">
                <%= cl_image_tag shop1.photo,
                width: 260, height: 170, crop: "fill", class: "img-saturated" %>
              </figure>
            <% end %>
            <div class="gallery-detail">
              <h4 class="gallery-title"><%= shop1.name %></h4>
            </div>
          </div>
        </div>

        <div class="col-sm-4">
          <div class="gallery-item">
            <figure class="overlay">
              <%= cl_image_tag("photo8_lsoo6o",
              width: 260, height: 170, crop: "fill", class: "img-saturated") %>
            </figure>
            <div class="gallery-detail">
              <h4 class="gallery-title">Colleagues' cup board</h4>
            </div>
          </div>
        </div>

        <div class="col-sm-4">
          <div class="gallery-item">
            <% items_ids = Item.all.map(&:id) %>
            <% id_item = items_ids.sample %>
            <% item1 = Item.find(id_item) %>
            <%= link_to shop_path(item1.shop_id) do %>
            <figure class="overlay">
              <%= cl_image_tag item1.photo,
              width: 260, height: 170, crop: "fill", class: "img-saturated" %>
            </figure>
            <% end %>
            <div class="gallery-detail">
              <h4 class="gallery-title"><%= item1.name + " - " + item1.shop.name %></h4>
            </div>
          </div>
        </div>

      </div><!-- .row -->

      <div class="row">

        <div class="col-sm-4">
          <div class="gallery-item">
            <% id2 = items_ids.select { |x| x != id_item }.sample %>  <!-- on retire la première photo du random -->
            <% item2 = Item.find(id2) %>
            <%= link_to shop_path(item2.shop_id) do %>
              <figure class="overlay">
                <%= cl_image_tag item2.photo,
                width: 260, height: 170, crop: "fill", class: "img-saturated" %>
              </figure>
            <% end %>
            <div class="gallery-detail">
              <h4 class="gallery-title"><%= item2.name + " - " + item2.shop.name %></h4>
            </div>
          </div>
        </div>

        <div class="col-sm-4">
          <div class="gallery-item">
            <% id2 = shops_ids.select { |x| x != id }.sample %>  <!-- on retire la première photo du random -->
            <% shop2 = Shop.find(id2) %>
            <%= link_to shop_path(id2) do %>
              <figure class="overlay">
                <%= cl_image_tag shop2.photo,
                  width: 260, height: 170, crop: "fill", class: "img-saturated"
                %>
              </figure>
            <% end %>
            <div class="gallery-detail">
              <h4 class="gallery-title"><%= shop2.name %></h4>
            </div>
          </div>
        </div>

        <div class="col-sm-4">
          <div class="gallery-item">
            <figure class="overlay">
              <%= cl_image_tag("photo6_qnua82",
              width: 260, height: 170, crop: "fill", class: "img-saturated") %>
            </figure>
            <div class="gallery-detail">
              <h4 class="gallery-title">Elisa Johns - Brainstorming</h4>
            </div>
          </div>
        </div>

      </div><!-- .row -->

      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <div class="devider">
            <%= cl_image_tag ("divider-down_lxs9rq") %>
          </div>
        </div>
      </div><!-- .row -->

    </div><!-- .container -->
  </section>

  <!-- Gallery end -->

  <!-- Footer end -->

  <div class="scroll-up">
    <a href="#totop"><i class="fa fa-angle-double-up"></i></a>
  </div>

