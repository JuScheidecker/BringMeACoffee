<div class="container margin-top-page">

  <div class="row">
      <div class="col-sm-6-offset-3">
        <div class="module-header">
          <h2 class= "module-title" >My Profile (order#index)</h2>
        </div>
      </div>
    </div>

  <section class="module">
    <div class="row">
      <div class="col-sm-12">
        <div class="iconbox" style="margin:20px;">
          <div class="iconbox-body" style="overflow:auto;">
            <div class="col-sm-12">
              <div class="iconbox-text">
                <h2 class= "iconbox-title" >My Profile</h2>
              </div>
            </div>
            <div class="col-sm-4">
              <%= image_tag "portrait.jpeg", class: 'gallery' %>
            </div>
            <div class="col-sm-8">
              <div class="iconbox-desc">
                <ul class="list-unstyled">
                  <li>Name: <strong><%= current_user.first_name %> <%= current_user.last_name%></strong></li>
                  <li>Email: <strong><%= current_user.email%></strong></li>
                  <li>Phone number: <strong><%= current_user.phone%></strong></li>
                  <li>Delivery address: <strong><%= current_user.delivery_address%></li>
                </ul>
              </div>
            </div>
              <div class="col-sm-12">
                <%= link_to "Edit my profile",edit_user_registration_path, class: 'btn btn-custom-1'%>
              </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="col-sm-12">
    <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'btn btn-custom-1'%>
  </div>

  <h2>My previous orders </h2>
  <% @orders.each do |order| %>
    <h3>Order n°: <%= link_to order.id, order_path(order) %></h3>
    <p>Order from: <%= order.user.first_name + ' ' + order.user.last_name %> </p>
    <p>Order date: <%= order.updated_at.to_formatted_s(:long) %></p>
    <p>Order status: <%= order.status %></p>
    <p>Order delivery type : <%= order.delivery_type %></p>
    <p>Total amount: <%=order.total_price%>€</p>

    <% if order.orders.first%>
      <p>Associated Child Order is Order n°: <%= link_to order.orders.first.id, order_path(order.orders.first.id) %></p>
    <% elsif order.main_orders.first %>
      <p> Associated main Order is Order n°: <%= link_to order.main_orders.first.id, order_path( order.main_orders.first.id) %></p>
    <% else %>
    <p> <em>No associated order</em></p>
    <% end %>

  <% end %>

</div>